{
  "name": "@ahmedali8/foundry-hardhat-template",
  "description": "Starter kit for writing Solidity smart contracts in hardhat and foundry environment",
  "version": "0.1.0",
  "author": {
    "name": "Ahmed Ali Bhatti",
    "url": "https://github.com/ahmedali8"
  },
  "scripts": {
    "accounts": "hardhat accounts",
    "build": "forge build",
    "chain": "hardhat node --no-deploy --export-all ./generated/chain.json --network hardhat",
    "clean": "shx rm -rf ./generated/artifacts/hardhat ./generated/cache/hardhat ./coverage ./src/types ./coverage.json && yarn typechain",
    "clean:generated": "shx rm -rf ./generated/**",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "yarn typechain && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy:hardhat-deploy": "./shell/create-deployments.sh && hardhat deploy --export-all ./generated/deployments/hardhat_contracts.json",
    "deploy": "yarn deploy:hardhat-deploy --network hardhat",
    "deploy:network": "yarn deploy:hardhat-deploy --network",
    "dodoc": "hardhat dodoc",
    "fork": "hardhat node --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "flat:contract": "hardhat flatfile --contract",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "is-ci || husky install",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "size": "hardhat size-contracts",
    "test:hh": "hardhat test",
    "test:hh:gas": "REPORT_GAS=true yarn test:hh",
    "test:hh:trace": "yarn test:hh --trace",
    "test:hh:fulltrace": "yarn test:hh --fulltrace",
    "test:forge": "forge test",
    "test:forge:gas": "yarn test:forge --gas-report",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "verify": "hardhat run scripts/verify.ts --network"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/address": "^5.6.1",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/constants": "^5.6.1",
    "@ethersproject/contracts": "^5.6.2",
    "@ethersproject/logger": "^5.6.0",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/solidity": "^5.6.1",
    "@ethersproject/transactions": "^5.6.2",
    "@ethersproject/units": "^5.6.1",
    "@ethersproject/wallet": "^5.6.2",
    "@ethersproject/wordlists": "^5.6.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.7.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "4.3.6",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "commander": "^9.3.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "5.6.9",
    "fs-extra": "^10.1.0",
    "hardhat": "2.9.9",
    "hardhat-contract-sizer": "2.6.1",
    "hardhat-deploy": "^0.11.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "1.0.8",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-storage-layout": "^0.1.6",
    "hardhat-test-utils": "^0.1.1",
    "hardhat-tracer": "^1.1.0-rc.6",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "shelljs": "^0.8.5",
    "shx": "0.3.4",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.2",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "foundry"
  ],
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "yarn@3.2.0"
}
